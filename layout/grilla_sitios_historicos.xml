<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:isScrollContainer="true">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="41dp">

        <FrameLayout
            android:id="@+id/frameLayout"
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:isScrollContainer="true"
            android:scrollbars="vertical"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="4dp"
            tools:layout_editor_absoluteY="3dp">




            <com.google.android.material.appbar.AppBarLayout
                android:id="@+id/appBarLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fitsSystemWindows="true">

            </com.google.android.material.appbar.AppBarLayout>

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/gradient_title"
                android:gravity="start"
                app:layout_anchor="@+id/appBarLayout"
                app:layout_anchorGravity="center"
                app:layout_scrollFlags="scroll|enterAlways"
                app:navigationIcon="@drawable/search"
                app:subtitle="@string/app_title1"
                app:subtitleTextColor="@color/black"
                app:title="@string/app_subtitle"
                app:titleTextAppearance="@style/TextAppearance.AppCompat.Large" />

            <Button
                android:id="@+id/button_ordenar"
                android:layout_width="190dp"
                android:layout_height="55dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="75dp"
                android:backgroundTint="@color/white"
                android:drawableLeft="@drawable/ordenar"
                android:text="@string/TextoOrdenar"
                android:textColor="@color/black"
                android:textStyle="bold" />


            <Button
                android:id="@+id/button_mapa"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="180dp"
                android:layout_height="60dp"
                android:layout_marginStart="190dp"
                android:layout_marginTop="75dp"
                android:backgroundTint="@color/white"
                android:drawableEnd="@drawable/pin"
                android:drawablePadding="8dp"
                android:text="@string/TextoMapa"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <View
                android:id="@+id/BSitioHistorico1"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="128dp"
                android:background="@drawable/gradient_box"
                android:radius="8dp" />

            <TextView
                android:id="@+id/TSitioHistorico1"
                android:layout_width="219dp"
                android:layout_height="114dp"
                android:layout_marginStart="145dp"
                android:layout_marginTop="132dp"
                android:text="@string/TextoSitioH1"
                android:textAlignment="center"
                android:textStyle="bold" />

            <View
                android:id="@+id/BSitioHistorico2"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="260dp"
                android:background="@drawable/gradient_box"
                android:radius="8dp" />

            <TextView
                android:id="@+id/TSitioHistorico2"
                android:layout_width="219dp"
                android:layout_height="116dp"
                android:layout_marginStart="145dp"
                android:layout_marginTop="260dp"
                android:text="@string/TextoSitioH2"
                android:textAlignment="center"
                android:textStyle="bold" />

            <View
                android:id="@+id/BSitioHistorico3"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="400dp"
                android:background="@drawable/gradient_box"
                android:radius="8dp" />


            <TextView
                android:id="@+id/TSitioHistorico3"
                android:layout_width="219dp"
                android:layout_height="125dp"
                android:layout_marginStart="145dp"
                android:layout_marginTop="400dp"
                android:text="@string/TextoSitioH3"
                android:textAlignment="center"
                android:textStyle="bold" />

            <View
                android:id="@+id/BSitioHistorico4"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="540dp"
                android:background="@drawable/gradient_box"
                android:radius="8dp" />

            <TextView
                android:id="@+id/TSitioHistorico4"
                android:layout_width="219dp"
                android:layout_height="116dp"
                android:layout_marginStart="145dp"
                android:layout_marginTop="540dp"
                android:text="@string/TextoSitioH4"
                android:textAlignment="center"
                android:textStyle="bold" />

            <View
                android:id="@+id/BSitioHistorico5"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="680dp"
                android:background="@drawable/gradient_box"
                android:radius="8dp" />

            <TextView
                android:id="@+id/TSitioHistorico5"
                android:layout_width="219dp"
                android:layout_height="116dp"
                android:layout_marginStart="145dp"
                android:layout_marginTop="680dp"
                android:text="@string/TextoSitioH5"
                android:textAlignment="center"
                android:textStyle="bold" />


            <View
                android:id="@+id/BSitioHistorico6"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="815dp"
                android:background="@drawable/gradient_box"
                android:radius="8dp" />

            <TextView
                android:id="@+id/TSitioHistorico6"
                android:layout_width="219dp"
                android:layout_height="116dp"
                android:layout_marginStart="145dp"
                android:layout_marginTop="815dp"
                android:text="@string/TextoSitioH6"
                android:textAlignment="center"
                android:textStyle="bold" />


        </FrameLayout>

    </ScrollView>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="409dp" />
</androidx.constraintlayout.widget.ConstraintLayout>